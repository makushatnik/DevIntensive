<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    style="@style/fill"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator"
        style="@style/fill">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay"
            style="@style/fill"
            android:background="@color/primary_color">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                style="@style/fill"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:scaleType="fitXY"
                    android:src="@drawable/userphoto_3"
                    android:fitsSystemWindows="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/spacing_normal_16"
                    android:gravity="center_horizontal"
                    android:text="@string/app_name"
                    android:textSize="@dimen/main_app_name"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"/>

                <android.support.v7.widget.Toolbar
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:titleTextColor="@color/white"
                    app:layout_collapseMode="pin">

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            style="@style/fill"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                style="@style/main">

                <LinearLayout
                    android:id="@+id/user_info_wrapper"
                    style="@style/user_info">

                    <LinearLayout
                        style="@style/vert_bar_block"
                        android:layout_weight="0.5">
                        <TextView
                            android:id="@+id/numOfRate"
                            style="@style/fill.text_view"
                            android:text="5"/>
                        <TextView
                            style="@style/fill.text_view"
                            android:text="Рейтинг"/>
                    </LinearLayout>
                    <View
                        style="@style/vert_divider"/>
                    <LinearLayout
                        style="@style/vert_bar_block"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/numOfStrings"
                            style="@style/fill.text_view"
                            android:text="5"/>
                        <TextView
                            style="@style/fill.text_view"
                            android:text="Написано строк кода"/>
                    </LinearLayout>
                    <View
                        style="@style/vert_divider"/>
                    <LinearLayout
                        style="@style/vert_bar_block"
                        android:layout_weight="0.5">
                        <TextView
                            android:id="@+id/numOfProj"
                            style="@style/fill.text_view"
                            android:text="5"/>
                        <TextView
                            style="@style/fill.text_view"
                            android:text="Проектов"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/outer_string_block">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>
                    <LinearLayout
                        style="@style/string_block.elem">
                        <android.support.design.widget.TextInputLayout
                            style="@style/fill">
                            <EditText
                                android:id="@+id/phone_et"
                                style="@style/fill.edit_text"
                                android:hint="Мобильный телефон"
                                android:inputType="phone"
                                android:text="+7(951)527-50-52"
                                android:textStyle="bold"
                                android:fontFamily="monospace"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/horiz_divider"/>

                <LinearLayout
                    style="@style/outer_string_block">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_black_24dp"/>
                    <LinearLayout
                        style="@style/string_block.elem">
                        <android.support.design.widget.TextInputLayout
                            style="@style/fill">
                            <EditText
                                android:id="@+id/email_et"
                                style="@style/fill.edit_text"
                                android:hint="E-mail"
                                android:inputType="textEmailAddress"
                                android:text="Makushatnik@yandex.ru"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/horiz_divider"/>

                <LinearLayout
                    style="@style/outer_string_block">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_vk_circle"/>
                    <LinearLayout
                        style="@style/string_block.elem">
                        <android.support.design.widget.TextInputLayout
                            style="@style/fill">
                            <EditText
                                android:id="@+id/vk_profile_et"
                                style="@style/fill.edit_text"
                                android:hint="Профиль в VK"
                                android:inputType="textEmailAddress"
                                android:text="https://vk.com/id6009615"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/horiz_divider"/>

                <LinearLayout
                    style="@style/outer_string_block">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_github_circle"/>
                    <LinearLayout
                        style="@style/string_block.elem">
                        <android.support.design.widget.TextInputLayout
                            style="@style/fill">
                            <EditText
                                android:id="@+id/repo_et"
                                style="@style/fill.edit_text"
                                android:hint="Репозиторий"
                                android:inputType="text"
                                android:text="github.com/makushatnik/DevIntensive"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/horiz_divider"/>

                <LinearLayout
                    style="@style/outer_string_block">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_black_24dp"/>
                    <LinearLayout
                        style="@style/string_block.elem">
                        <android.support.design.widget.TextInputLayout
                            style="@style/fill">
                            <EditText
                                android:id="@+id/about_et"
                                style="@style/fill.edit_text"
                                android:gravity="top"
                                android:hint="О себе"
                                android:inputType="textMultiLine"
                                android:text="Java/Oracle/MongoDB Developer. \nAlso Bitrix, PHP, MySQL, \nPostgreSQL. In my free time i go in for sport, play in a intellectual games."
                                android:lines="10"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_ab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fab_right_space"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_anchor="@+id/appbar_layout"
            app:layout_anchorGravity="bottom|right">

        </android.support.design.widget.FloatingActionButton>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>