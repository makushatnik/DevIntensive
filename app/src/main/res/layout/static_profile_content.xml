<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/fill"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <!--app:layout_behavior=".ui.behaviors.CustomNestedScrollBehavior"-->


    <LinearLayout
        style="@style/main">

        <LinearLayout
            style="@style/outer_string_block">
            <ImageView
                android:id="@+id/github_iv"
                style="@style/icon.left"
                android:src="@drawable/ic_github_circle"/>

            <ListView
                android:id="@+id/repo_list"
                style="@style/fill"
                android:layout_marginLeft="@dimen/spacing_medium_32"/>

            <ImageView
                android:id="@+id/github_visible_iv"
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>
        </LinearLayout>
        <View
            style="@style/horiz_divider"/>

        <LinearLayout
            style="@style/outer_string_block">
            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_account_circle_black_24dp"/>
            <LinearLayout
                style="@style/string_block.elem">
                <android.support.design.widget.TextInputLayout
                    style="@style/fill">
                    <EditText
                        android:id="@+id/about_et"
                        style="@style/fill.edit_text"
                        android:gravity="top"
                        android:hint="О себе"
                        android:inputType="textMultiLine"
                        android:text="Java/Oracle/MongoDB Developer. \nAlso Bitrix, PHP, MySQL, \nPostgreSQL. In my free time i go in for sport, play in a intellectual games."
                        android:lines="10"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>