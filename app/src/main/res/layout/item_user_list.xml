<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_user_list"
    style="@style/fill"
    android:layout_marginTop="@dimen/spacing_small_8"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp">

    <LinearLayout
        style="@style/fill"
        android:orientation="vertical">

        <FrameLayout
            style="@style/fill">

            <com.softdesign.devintensive.ui.views.AspectRatioImageView
                android:id="@+id/user_photo"
                style="@style/fill"
                android:scaleType="centerCrop"
                app:aspect_ratio="1.78"/>

            <TextView
                android:id="@+id/username_txt"
                style="@style/fill"
                android:layout_gravity="bottom"
                android:text="Фамилия Имя"
                android:textColor="@color/white"
                android:fontFamily="@string/ff_medium"
                android:textSize="@dimen/font_large_24"
                android:paddingLeft="@dimen/spacing_normal_16"
                android:paddingRight="@dimen/spacing_normal_16"
                android:paddingBottom="@dimen/spacing_medial_24"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_large_72"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rating_txt"
                    style="@style/wrap"
                    android:text="0"
                    android:fontFamily="@string/ff_medium"
                    android:textSize="@dimen/font_medium_20"
                    android:textColor="@color/black"/>
                <TextView
                    style="@style/wrap"
                    android:text="Рейтинг"
                    android:fontFamily="@string/ff_regular"
                    android:textSize="@dimen/font_small_14"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/code_lines_txt"
                    style="@style/wrap"
                    android:text="0"
                    android:fontFamily="@string/ff_medium"
                    android:textSize="@dimen/font_medium_20"
                    android:textColor="@color/black"/>
                <TextView
                    style="@style/wrap"
                    android:text="Написано строк кода"
                    android:fontFamily="@string/ff_regular"
                    android:textSize="@dimen/font_small_14"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/projects_txt"
                    style="@style/wrap"
                    android:text="0"
                    android:fontFamily="@string/ff_medium"
                    android:textSize="@dimen/font_medium_20"
                    android:textColor="@color/black"/>
                <TextView
                    style="@style/wrap"
                    android:text="Проектов"
                    android:fontFamily="@string/ff_regular"
                    android:textSize="@dimen/font_small_14"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/bio_txt"
            style="@style/fill"
            android:paddingLeft="@dimen/spacing_normal_16"
            android:paddingRight="@dimen/spacing_normal_16"
            android:text=""
            android:textSize="@dimen/font_small_14"
            android:textColor="@color/grey"
            android:fontFamily="@string/ff_regular"
            android:maxLines="3"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:layout_marginBottom="@dimen/spacing_small_8"
            android:background="@color/grey"/>

        <RelativeLayout
            style="@style/fill"
            android:orientation="horizontal">
            <Button
                android:id="@+id/more_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="@dimen/spacing_normal_16"
                android:paddingRight="@dimen/spacing_normal_16"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="Просмотр"
                android:textColor="@color/color_accent"/>

            <ImageView
                android:id="@+id/like_btn"
                style="@style/wrap"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginRight="32dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_thumb_up_black_24dp"/>

            <TextView
                android:id="@+id/numOfLikes"
                style="@style/wrap"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/spacing_normal_16"
                android:text="111"
                android:textSize="@dimen/font_small_14"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>