<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>
    
    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="icon.right2" parent="icon">
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main" parent="fill">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="user_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_extra_large_112</item>
        <item name="android:background">@color/grey</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="fill.edit_text" parent="fill">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="fill.text_view" parent="fill">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="horiz_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
    </style>

    <style name="yellow_string">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_normal_16</item>
        <item name="android:background">@color/light_yellow</item>
    </style>

    <style name="green_string">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_normal_16</item>
        <item name="android:background">@color/color_accent</item>
    </style>

    <style name="pink_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/primary_color_dark</item>
    </style>

    <style name="vert_divider">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal_16</item>
    </style>

    <style name="vert_bar_block">
        <item name="android:layout_width">@dimen/zero_spacing</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="outer_string_block" parent="fill">
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="string_block">
        <item name="android:layout_width">@dimen/zero_spacing</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="string_block.elem" parent="string_block">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="string_block.last" parent="string_block">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="list_view" parent="fill">
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
        <item name="android:paddingTop">@dimen/spacing_normal_16</item>
        <item name="android:paddingBottom">@dimen/spacing_normal_16</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="appBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_large_92</item>
        <item name="android:background">@color/black</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="progress_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_pink</item>
        <item name="android:background">@color/color_pink</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>
</resources>
