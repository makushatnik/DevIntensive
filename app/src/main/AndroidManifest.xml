<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.softdesign.devintensive"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false"/>
    <uses-feature
        android:name="android.hardware.camera2.autofocus"
        android:required="false"/>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".utils.DevIntensiveApplication"
        android:allowBackup="true"
        android:icon="@mipmap/craft"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name">

        </activity>
        <activity
            android:name=".ui.activities.SplashActivity"
            android:label="Business Card">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.AuthActivity"
            android:label="Authorization">
        </activity>
        <activity
            android:name=".ui.activities.UserListActivity"
            android:label="Команда"
            android:parentActivityName=".ui.activities.MainActivity">

        </activity>
        <activity
            android:name=".ui.activities.ProfileUserActivity"
            android:label="Профиль"
            android:parentActivityName=".ui.activities.UserListActivity">
        </activity>
        <activity
            android:name=".ui.activities.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".ui.activities.MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.PREFERENCE"/>
            </intent-filter>
        </activity>
        <receiver android:name=".receivers.IncomingCallReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.WifiReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>